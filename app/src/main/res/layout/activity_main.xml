<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1AFFFFFF"
    android:layout_margin="10dp"
    tools:context=".Views.activities.MainActivity">

    <EditText
        android:id="@+id/et_search_tweet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_tweet"
        android:backgroundTint="@android:color/transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_sort"
        android:background="@drawable/ic_sort_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/et_search_tweet"
        android:id="@+id/rv_tweets"
        tools:listitem="@layout/tweet_list_item"/>

</RelativeLayout>